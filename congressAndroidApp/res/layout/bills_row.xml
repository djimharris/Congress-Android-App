<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dp"
    android:background="@drawable/list_item">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="17dp"
        android:id="@+id/bill_id"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/detailsarrowicon"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:id="@+id/arrow"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/bill_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill_content"
        android:layout_below="@+id/arrow"
        android:layout_alignRight="@+id/arrow"
        android:layout_alignEnd="@+id/arrow"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/bill_id"
        android:layout_alignStart="@+id/bill_id"
        android:paddingTop="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_content"
        android:layout_alignLeft="@+id/bill_content"
        android:layout_alignStart="@+id/bill_content"
        android:layout_marginTop="16dp"
        android:id="@+id/bill_date" />
</RelativeLayout>