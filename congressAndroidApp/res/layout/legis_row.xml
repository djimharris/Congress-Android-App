<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/list_item">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/ic_launcher"
    android:id="@+id/legis_image"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/legis_info"
        android:layout_below="@+id/legis_name"
        android:layout_toRightOf="@+id/legis_image"
        android:layout_toEndOf="@+id/legis_image"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/legis_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/legis_image"
        android:layout_toEndOf="@+id/legis_image"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/detailsarrowicon"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView3"
        android:layout_below="@+id/legis_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>